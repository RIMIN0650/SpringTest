<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 
 <mapper namespace="com.rimin.spring.test.ajax.repository.FavoriteRepository">
	 	
	<select id="selectFavoriteList" 
	resultType="com.rimin.spring.test.ajax.domain.Favorite">
		SELECT
			`id`
			, `name`
			, `url`
			, `createdAt`
			, `updatedAt`
		FROM
			`favorite`
	
	
	
	
	</select>
	
	
	<insert id="insertFavorite" parameterType="map">
		INSERT INTO
			`favorite`
		(
			`name`
			, `url`
		)
		VALUE
		(
			#{name}
			, #{url}
		)
	
	
	</insert>
	
    <!-- 이메일 중복 여부 판단 -->
	<select id="checkDupUrl" parameterType="string" resultType="int">
		SELECT
			count(*)
		FROM
			`favorite`
		WHERE
			`url` = #{url}
	</select>
	<!-- #{url} : parameter로 전달받은 url 값 -->
	
	
	
	
	<delete id="deleteStar" parameterType="int">
		DELETE FROM
			`favorite`
		WHERE
			`id` = #{id}
	
	
	</delete>
	
	
	
	
	
 </mapper>

