<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 
 
 <mapper namespace="com.rimin.spring.test.front.repository.BookingRepository">
 <!-- namespace : 연동할 repository 위치 지정해줌 -->
 	
 	<select id="selectBookList" resultType="com.rimin.spring.test.front.domain.Booking">
 		SELECT 
 			`id`
 			, `name`
 			, `date`
 			, `day`
 			, `headcount`
 			, `phoneNumber`
 			, `state`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`booking`
 		ORDER BY
 			`id` DESC
 			
 		
 	
 	
 	
 	
 	
 	</select>
 	
 	<insert id="insertBooking" 
 			parameterType="map">
 	<!-- repository로 전달된 parameter값을 #{}안에 채워넣어줌 -->
 		INSERT INTO
 			`booking`
 		(
 			`name`
 			, `headcount`
 			, `day`
 			, `date`
 			, `phoneNumber`
 			, `state`
 		)
		VALUE
		(
			#{name}
			, #{headcount}
			, #{day}
			, #{date}
			, #{phoneNumber}
			, '대기중'
		) 	
 	
 	</insert>
 	
 	
 	<delete id="deleteBooking" parameterType="int">
 		DELETE FROM
 			`booking`
 		WHERE
 			`id` = #{id}
 	</delete>
 	
 	
 	
 	
 
 
 </mapper>